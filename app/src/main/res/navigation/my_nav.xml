<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.jarsical.fragments.list.songFragment"
        android:label="Home"
        tools:layout="@layout/fragment_song">
        <action
            android:id="@+id/action_listFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/action_searchFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.jarsical.fragments.list.songFragment"
        android:label="Home"
        tools:layout="@layout/fragment_song" >
        <action
            android:id="@+id/action_listFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/action_listFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.jarsical.fragments.library.libraryFragment"
        android:label="Add Data"
        tools:layout="@layout/fragment_library" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_addFragment_to_listFragment2"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>